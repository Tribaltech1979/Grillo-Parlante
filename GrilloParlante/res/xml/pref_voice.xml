<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="voice_checkbox"
        android:summary="@string/pref_voice_title"
        android:title="@string/pref_voice_title" />
 
    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:entries="@array/pref_voice_titles"
        android:entryValues="@array/pref_voice_values"
        android:key="pref_voice_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_voice_list_title" />
    
        <ListPreference
        android:entries="@array/pref_voice_speech_titles"
        android:entryValues="@array/pref_voice_speech_values"
        android:key="pref_voice_speech"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_voice_speech_messages" />

</PreferenceScreen>
